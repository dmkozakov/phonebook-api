{
    "compilerOptions": {
      "target": "ES2018",
      "lib": ["ES6"],
      "module": "CommonJS",
      "rootDir": "./src",
      "resolveJsonModule": true,
      "allowJs": true,
      "sourceMap": true,
      "outDir": "./dist",
      "removeComments": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noImplicitAny": true,
      "skipLibCheck": true,
      "experimentalDecorators": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "src/interfaces"],
  }